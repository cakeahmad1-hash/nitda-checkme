{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "types": ["node"],
    "isolatedModules": true,
    "allowJs": true,
    "allowImportingTsExtensions": true,
    "noEmit": false
  },
  "include": ["api/**/*.ts"]
}
